{
  "name": "chykalodmitry/adform-client",
  "description": "PHP client for adform API",

  "keywords": [
    "adform",
    "dmp",
    "client",
    "php"
  ],

  "type": "library",
  "homepage": "https://github.com/chykalodmitry/adform-client",
  "license": "MIT",

  "authors": [
    {
      "name": "Francesco Panina",
      "homepage": "https://github.com/ranpafin"
    },
    {
      "name": "Miloš Jovanović",
      "homepage": "https://github.com/toxonics"
    },
    {
      "name": "Giacomo Furlan",
      "homepage": "https://giacomofurlan.name/"
    },
    {
      "name": "Dmytro Chykalo",
      "homepage": "https://github.com/chykalodmitry"
    }
  ],

  "require": {
    "php": ">=7.1",
    "ext-mbstring": "*",
    "ext-json": "*",

    "myclabs/php-enum": "^1.6",
    "league/oauth2-client": "^1.4",
    "predis/predis": "^1.1",
    "league/flysystem": "^1.0",
    "guzzlehttp/guzzle": "^6.3"
  },

  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "vlucas/phpdotenv": "^2.5",
    "ramsey/uuid": "^3.8",
    "php-coveralls/php-coveralls": "^2.1",
    "phpstan/phpstan": "~0.11",
    "jangregor/phpstan-prophecy": "*",
    "phpstan/phpstan-deprecation-rules": "*",
    "phpstan/phpstan-phpunit": "*",
    "slevomat/coding-standard": "^4.6",
    "squizlabs/php_codesniffer": "^3.3",
    "phpstan/phpstan-php-parser": "^0.11.0"
  },

  "autoload": {
    "psr-4": {
      "Audiens\\AdForm\\": "src/Audiens/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  }
}
